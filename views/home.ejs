    <div id="main-body" class="d-flex justify-content-center py-4" style="height: 100vh; margin:0">
        <div class="container-fluid">
            <div class="row justify-content-center" style="margin-left: 10%; margin-right: 10%;">

                <div class="col-lg-auto" style="width:55%">

                    <!-- image -->
                    <div class="row" style="width:100%; padding-bottom: 20px;">
                        <img src="assets/home.png" alt="this is an image" style="border-radius: 15px;">
                    </div>
                    <!-- input search -->
                    <div class="row" style="width:100%">
                        <form id="searchForm" method="GET" action="/home/search">
                            <input 
                                name="query" 
                                aria-labelledby="cfe-job-search-label" 
                                type="search" 
                                autocomplete="off" 
                                autocorrect="off" 
                                autocapitalize="off" 
                                spellcheck="false" 
                                placeholder="Search for crop-name, description or location" 
                                value="" 
                                class="air3-typeahead-input-fake air3-input form-control"
                                style="width: 100%;">
                            <button type="submit" class="btn btn-primary mt-2" style="width: min-content">Search</button>
                        </form>
                        
                    </div>

                    <!-- request container -->

                    <% if (requests && requests.length > 0) { %>
                        <% requests.forEach(request => { %>
                            <div class="row p-3" style="width: 100%; min-width: 100%; max-height: 200px; margin-bottom: 0;">
                                <div style="position: relative; transition: transform 0.3s ease, box-shadow 0.3s ease; border: 1px solid #e0e0e0; border-radius: 8px; padding: 15px;" 
                                    onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 4px 12px rgba(0, 0, 0, 0.1)';" 
                                    onmouseout="this.style.transform='none'; this.style.boxShadow='none';">
                            
                                    <div style="position: absolute; top: 10px; right: 10px; display: flex; flex-direction: row; align-items: center; gap: 5px;">
                                        <i class="bi bi-arrow-up" onclick="vote(this, 'up')" style="cursor: pointer; font-size: 1.2rem; color: #198754;"></i>
                                        <span class="upvote-count" style="font-size: 0.9rem; color: #198754;">0</span>
                            
                                        <i class="bi bi-arrow-down" onclick="vote(this, 'down')" style="cursor: pointer; font-size: 1.2rem; color: #dc3545;"></i>
                                        <span class="downvote-count" style="font-size: 0.9rem; color: #dc3545;">0</span>
                                    </div>
                            
                                    <div style="color: #6c757d; font-size: 0.8rem; margin-bottom: 2px;">
                                        Posted <%= request.posted_time %> 
                                    </div>
                                    <div style="font-size: 1.25rem; font-weight: bold;">
                                        <%= request.crop_name %> needed in <%= request.quantity %> kg
                                    </div>
                                    <div style="color: #6c757d; margin-top: 4px;">
                                        <%= request.description %>
                                    </div>
                                    <div style="display: flex; justify-content: start; align-items: center; margin-top: 8px; font-size: 0.9rem;">
                                        <div style="color: #198754; margin-right: 12px;">
                                            Offer Price: Rs. <%= request.offer_price %>/kg | Total Amount: Rs. <%= request.total_amount %>
                                        </div>
                                        <div style="color: #dc3545;">
                                            Deadline: <%= request.delivery_deadline %>
                                        </div>
                                    </div>
                                    <div style="display: flex; align-items: center; color: #6c757d; margin-top: 8px; font-size: 0.9rem;">
                                        <i class="bi bi-check-circle-fill" style="margin-right: 4px;"></i>
                                        <%= request.payment_verified ? 'Payment Verified' : 'Payment Pending' %>
                                        <span style="margin: 0 8px;">⭐ ⭐ ⭐ ⭐ <%= request.rating %></span>
                                        <i class="bi bi-geo-alt" style="margin-left: 12px; margin-right: 4px;"></i>
                                        <%= request.location %>
                                        <span style="margin-left: 12px;">Proposals: <%= request.proposals %></span>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>No matching results found.</p>
                    <% } %>
                            

                    
                </div>


                <div class="col-md-3" style="width:25%;">
                    <% if (profileStatus === 'incomplete') { %>
                        <div class="card bg-light mb-4 p-4 box-shadow h-md-250">
                            <div class="card-body d-flex align-items-center">
                                <i class="bi bi-person-circle fs-1 me-3 text-primary"></i>
                                <div>
                                    <h3 class="h5 mb-1"><%= user.name %></h3>
                                    <p class="text-muted mb-2">Please complete and verify your profile</p>
                                    <div class="d-flex align-items-center">
                                        <a href="/home/profile" class="text-primary">Complete your profile</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <% if (profileStatus.includes('farmer')) { %>
                            <div class="profile-card bg-light p-4 rounded shadow-sm mb-4">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-person-circle fs-1 me-3 text-primary"></i>
                                    <div>
                                        <h3 class="mb-1"><%= user.name %></h3>
                                        <span class="badge bg-success">Verified Farmer</span>
                                    </div>
                                </div>
                                <div class="profile-info">
                                    <p><strong>Location:</strong> <%= user.farmer_profile.location %></p>
                                    <p><strong>Farm Size:</strong> <%= user.farmer_profile.farmSize %> Acres</p>
                                    <p><strong>Crops Grown:</strong> <%= user.farmer_profile.cropsGrown.join(', ') %></p>
                                    <p><strong>Experience:</strong> <%= user.farmer_profile.experience %> years</p>
                                    <p><strong>Farming Methods:</strong> <%= user.farmer_profile.farmingMethods.join(', ') %></p>
                                    <p><strong>Past Deals:</strong> <%= user.farmer_profile.past_deals %> Successful Transactions</p>
                                    <p><strong>Ratings & Reviews:</strong> 
                                        <%= '★'.repeat(Math.floor(user.farmer_profile.rating)) %>
                                        <%= '☆'.repeat(5 - Math.floor(user.farmer_profile.rating)) %>
                                        (<%= user.farmer_profile.rating.toFixed(1) %>/5)
                                    </p>
                                </div>
                            </div>
                        <% } %>
                    
                        <% if (profileStatus.includes('buyer')) { %>
                            <div class="profile-card bg-light p-4 rounded shadow-sm">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-person-circle fs-1 me-3 text-primary"></i>
                                    <div>
                                        <h3 class="mb-1"><%= user.name %></h3>
                                        <span class="badge bg-info">Verified Buyer</span>
                                    </div>
                                </div>
                                <div class="profile-info">
                                    <p><strong>Location:</strong> <%= user.buyer_profile.location %></p>
                                    <p><strong>Company Name:</strong> <%= user.buyer_profile.companyName %></p>
                                    <p><strong>Products Needed:</strong> <%= user.buyer_profile.productsNeeded.join(', ') %></p>
                                    <p><strong>Preferred Quantities:</strong> <%= user.buyer_profile.preferredQuantities %></p>
                                    <p><strong>Payment Reliability:</strong> <%= (user.buyer_profile.paymentReliability).toFixed(1) %>% Completion Rate</p>
                                    <p><strong>Past Deals:</strong> <%= user.buyer_profile.past_deals %> Successful Transactions</p>
                                    <p><strong>Ratings & Reviews:</strong> 
                                        <%= '★'.repeat(Math.floor(user.buyer_profile.rating)) %>
                                        <%= '☆'.repeat(5 - Math.floor(user.buyer_profile.rating)) %>
                                        (<%= user.buyer_profile.rating.toFixed(1) %>/5)
                                    </p>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                    
                    
                    
                </div>
            </div>
        </div>
    </div>

    <script>

        function vote(icon, type) {
            const parentDiv = icon.parentElement;
            const countElement = parentDiv.querySelector(type === 'up' ? '.upvote-count' : '.downvote-count');
            let count = parseInt(countElement.innerText, 10);
            countElement.innerText = count + 1;
        }
    </script>
   

    <div class="modal fade" id="farmerProfileModal" tabindex="-1" aria-labelledby="farmerProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="farmerProfileModalLabel">Farmer Profile Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="farmerProfileForm" method="POST" action="/submit-farmer-profile">
                        <div class="mb-3">
                            <label for="farmer_location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="farmer_location" name="location" required>
                        </div>
                        <div class="mb-3">
                            <label for="farmSize" class="form-label">Farm Size (in acres)</label>
                            <input type="number" class="form-control" id="farmSize" name="farmSize" required>
                        </div>
                        <div class="mb-3">
                            <label for="cropsGrown" class="form-label">Crops Grown</label>
                            <input type="text" class="form-control" id="cropsGrown" name="cropsGrown" placeholder="Wheat,Rice,Bajra" required>
                        </div>
                        <div class="mb-3">
                            <label for="experience" class="form-label">Experience (in years)</label>
                            <input type="number" class="form-control" id="experience" name="experience" required>
                        </div>
                        <div class="mb-3">
                            <label for="farmingMethods" class="form-label">Farming Methods</label>
                            <input type="text" class="form-control" id="farmingMethods" name="farmingMethods" placeholder="organic, fertilizer based" required>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="buyerProfileModal" tabindex="-1" aria-labelledby="buyerProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="buyerProfileModalLabel">Buyer Profile Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="buyerProfileForm" method="POST" action="/submit-buyer-profile">
                        <div class="mb-3">
                            <label for="buyer_location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="buyer_location" name="location" required>
                        </div>
                        <div class="mb-3">
                            <label for="companyName" class="form-label">Company Name</label>
                            <input type="text" class="form-control" id="companyName" name="companyName" required>
                        </div>
                        <div class="mb-3">
                            <label for="productsNeeded" class="form-label">Products Needed</label>
                            <input type="text" class="form-control" id="productsNeeded" name="productsNeeded" placeholder="Wheat, Rice, Bajra" required>
                        </div>
                        <div class="mb-3">
                            <label for="preferredQuantities" class="form-label">Preferred Quantities</label>
                            <input type="text" class="form-control" id="preferredQuantities" name="preferredQuantities" placeholder="e.g., Bulk Orders, Small Batches" required>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



    
    
</body>
