    <script>
        async function loadBuyerProfile(userId) {
            try {
                const response = await fetch(`/get-buyer-profile?user_id=${userId}`);
                const data = await response.json();
    
                if (data.buyer_profile_completed) {
                    const profile = data.buyer_profile || {};
                    document.getElementById('buyer_location').value = profile.location || '';
                    document.getElementById('companyName').value = profile.companyName || '';
                    document.getElementById('productsNeeded').value = profile.productsNeeded || '';
                    document.getElementById('preferredQuantities').value = profile.preferredQuantities || '';
    
                    document.querySelectorAll('#buyerProfileForm input').forEach(input => {
                        input.setAttribute('disabled', 'true');
                    });
    
                    document.getElementById('submitBtn1').style.display = 'none';
                }
            } catch (error) {
                console.error('Error loading buyer profile:', error);
            }
        }
    
        document.addEventListener('DOMContentLoaded', () => {
            const userId = '<%= user.user_id %>';
            if (userId) {
                loadBuyerProfile(userId);
            }
        });
    </script>
    
    

