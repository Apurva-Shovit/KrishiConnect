  <script>document.getElementById("addNode").addEventListener("click", function() {
    const container = document.getElementById("nodesContainer");

    const index = container.children.length + 1;
    
    const nodeHTML = `
        <div class="node-entry border p-3 mt-2 rounded">
            <label class="form-label">Stage ${index}</label>
            <input type="text" class="form-control mb-2" name="node_title[]" placeholder="Stage Title" required>
            <input type="date" class="form-control mb-2" name="node_date[]" required>
            <textarea class="form-control mb-2" name="node_description[]" placeholder="Stage Description" rows="2" required></textarea>
            <button type="button" class="btn btn-danger btn-sm removeNode">Remove</button>
        </div>
    `;

    container.insertAdjacentHTML("beforeend", nodeHTML);

    // Remove node
    container.querySelectorAll(".removeNode").forEach(button => {
        button.addEventListener("click", function() {
            this.parentElement.remove();
        });
    });
});
</script>
