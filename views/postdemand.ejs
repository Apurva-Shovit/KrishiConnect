  <main class="form-signin w-100 mx-auto" style="max-width: 600px;margin-top: 120px;">
    <div class="row g-5" style="width: 100%;">
      <div style="width: 100%;">

        <h4 class="mb-3 text-center">Enter Post Information</h4>
        <hr class="my-4">
        
        <form class="needs-validation" action="/postdemand" method="POST" novalidate="">
          <div class="row g-3">
            <!-- Crop Name -->
            <div class="col-md-6">
              <label for="cropName" class="form-label">Crop Name</label>
              <input type="text" class="form-control" id="cropName" name="crop_name" placeholder="E.g., Wheat, Rice" required>
              <div class="invalid-feedback">Enter the crop name.</div>
            </div>
        
            <!-- Quantity -->
            <div class="col-md-6">
              <label for="quantity" class="form-label">Quantity (kg)</label>
              <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Enter quantity in kg" required>
              <div class="invalid-feedback">Enter a valid quantity.</div>
            </div>
        
            <!-- Price Offered -->
            <div class="col-md-6">
              <label for="priceOffered" class="form-label">Price Offered</label>
              <input type="number" class="form-control" id="priceOffered" name="price_offered" placeholder="Enter price per kg" step="0.01" required>
              <div class="invalid-feedback">Enter a valid price.</div>
            </div>
        
            <!-- Delivery Deadline -->
            <div class="col-md-6">
              <label for="deliveryDeadline" class="form-label">Delivery Deadline</label>
              <input type="date" class="form-control" id="deliveryDeadline" name="delivery_deadline" required>
              <div class="invalid-feedback">Select a delivery deadline.</div>
            </div>
        
            
        
            <!-- Description -->
            <div class="col-md-12">
              <label for="description" class="form-label">Description</label>
              <input type="text" class="form-control" id="description" name="description" placeholder="Brief details">
              <div class="invalid-feedback">Enter a valid description.</div>
            </div>
        
            <!-- Spending Category -->
            <div class="col-md-6">
              <label for="status" class="form-label">Catagory </label>
              <select class="form-control" id="status" name="spendingcatagoory" required>
                <option value="pending" selected>Essential</option>
                <option value="accepted">bulk</option>
                <option value="Luxury">Luxury</option>
              </select>
              <div class="invalid-feedback">Select a status.</div>
            </div>
            
            <!-- Location -->
            <div class="col-md-6">
              <label for="location" class="form-label">Location</label>
              <input type="text" class="form-control" id="location" name="location" placeholder="City, State">
            </div>
        
        
            <div class="col-12 text-center mt-3">
              <button class="btn btn-primary btn-lg" type="submit" style="border-radius: 20px; background-color: #3d6a25; border-color: #3d6a25;">Post Demand</button>
            </div>
          </div>
        </form>
        
        
