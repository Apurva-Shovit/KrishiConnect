  <script>
      async function loadFarmerProfile(userId) {
          try {
              const response = await fetch(`/get-farmer-profile?user_id=${userId}`);
              const data = await response.json();

              if (data.farmer_profile_completed) {
                  const profile = data.farmer_profile || {};
                  document.getElementById('farmer_location').value = profile.location || '';
                  document.getElementById('farmSize').value = profile.farmSize || '';
                  document.getElementById('cropsGrown').value = profile.cropsGrown || '';
                  document.getElementById('experience').value = profile.experience || '';
                  document.getElementById('farmingMethods').value = profile.farmingMethods || '';

                  document.querySelectorAll('#farmerProfileForm input').forEach(input => {
                      input.setAttribute('disabled', 'true');
                  });

                  document.getElementById('submitBtn').style.display = 'none';
              }
          } catch (error) {
              console.error('Error loading farmer profile:', error);
          }
      }

      document.addEventListener('DOMContentLoaded', () => {
          const userId = '<%= user.user_id %>';
          if (userId) {
              loadFarmerProfile(userId);
          }
      });
  </script>


