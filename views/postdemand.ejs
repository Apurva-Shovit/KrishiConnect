  <script>
  document.getElementById("addNode").addEventListener("click", function() {
    const container = document.getElementById("nodesContainer");

    const index = container.children.length + 1;
    
    const nodeHTML = `
        <div class="node-entry border p-3 mt-2 rounded">
            <label class="form-label">Stage ${index}</label>
            <input type="text" class="form-control mb-2" name="node_title[]" placeholder="Stage Title" required>
            <input type="date" class="form-control mb-2" name="node_date[]" required>
            <textarea class="form-control mb-2" name="node_description[]" placeholder="Stage Description" rows="2" required></textarea>
            <button type="button" class="btn btn-danger btn-sm removeNode">Remove</button>
        </div>
    `;

    container.insertAdjacentHTML("beforeend", nodeHTML);

    // Remove node
    container.querySelectorAll(".removeNode").forEach(button => {
        button.addEventListener("click", function() {
            this.parentElement.remove();
        });
    });
});
</script>

<script>




  function openRequestDetails(name, location, company, crop, quantity, offerPrice, totalAmount, requestId) {
      document.getElementById('buyerName').innerText = name || 'working on it...';
      document.getElementById('buyerLocation').innerText = location || 'working on it...';
      document.getElementById('buyerCompany').innerText = company || 'working on it...';
      document.getElementById('cropName').innerText = crop;
      document.getElementById('quantity').innerText = quantity;
      document.getElementById('offerPrice').innerText = offerPrice;
      document.getElementById('totalAmount').innerText = totalAmount;
      document.getElementById('request_id').value = requestId;
      new bootstrap.Modal(document.getElementById('requestDetailsModal')).show();
  }

  async function fetchRequestDetails(requestId) {
      try {
          const response = await fetch(`/home/request?request_id=${requestId}`);
          const data = await response.json();


          openRequestDetails(
              data.buyer_name,
              data.buyer_location,
              data.buyer_company,
              data.crop_name,
              data.quantity,
              data.offer_price,
              data.total_amount,
              data.request_id
          );
      } catch (error) {
          console.error('Error fetching request details:', error);
      }
  }


</script>


